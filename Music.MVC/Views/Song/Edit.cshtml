@model Music.MVC.ViewModels.SongViewModel

@{
    ViewBag.Title = "Edit";
    var artists = ViewBag.Artists as IEnumerable<SelectListItem>;
    var styles = ViewBag.Styles as IEnumerable<SelectListItem>;
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>SongViewModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdSong)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Artist.Name, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Artist")
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Artist.IdArtist, artists, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Artist.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Style.Name, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Style")
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Style.IdStyle, styles, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Style.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
